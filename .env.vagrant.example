FLASK_APP_NAME="FIFAHUB(dev)"
FLASK_ENV=development
DOMAIN=localhost:5000
MARIADB_PORT=3306
MARIADB_HOSTNAME=localhost
MARIADB_DATABASE=fifahubdb
MARIADB_TEST_DATABASE=fifahubdb_test
MARIADB_USER=fifahubdb_user
MARIADB_PASSWORD=fifahubdb_password
MARIADB_ROOT_PASSWORD=fifahubdb_root_password
WORKING_DIR=/vagrant/

# Security - Required for 2FA encryption
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Email Configuration (SMTP) - Optional for development
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=noreply@fifahub.com
